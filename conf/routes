# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

PUT		/transactionservice/transaction/$transaction_id<[0-9]+>		controllers.Application.putTransaction(transaction_id:Long)
GET		/transactionservice/transaction/$transaction_id<[0-9]+>		controllers.Application.getTransaction(transaction_id:Long)
GET     /transactionservice/types/:type								controllers.Application.getTypes(type:String)
GET     /transactionservice/sum/$transaction_id<[0-9]+>				controllers.Application.getSum(transaction_id:Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
